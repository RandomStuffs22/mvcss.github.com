!!! 5
%html(lang="en")
  %head
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= (title = data.page.title) ? "#{title} - MVCSS" : 'MVCSS'
    %meta(name="description" content="MVCSS - A Sass-based CSS Architecture by Nick Walsh & Drew Barontini.")

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,300'
    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    .l-controls
      %a.btn--a(href='https://github.com/mvcss/mvcss') View Code &rarr;
      %p= link_to 'Changelog (v3.0.0)', '/changelog/'

    .l-sidebar
      = partial 'shared/header'
      = partial 'shared/nav'

      %p.l-about
        %b Crafted with care by
        = link_to 'Nick Walsh', 'http://twitter.com/nickawalsh'
        &amp;
        = link_to 'Drew Barontini', 'http://twitter.com/drewbarontini'

    .l-cell= yield
